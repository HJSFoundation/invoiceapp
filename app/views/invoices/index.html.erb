<h1>Listing invoices</h1>

<table>
  <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Customer</th>
  </tr>

<% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.item %></td>
    <td><%= invoice.quantity %></td>
    <td><%= invoice.price %></td>
    <td><%= invoice.customer_id %></td>
    <td class="noborder"><%= link_to 'Show', invoice %></td>
    <td class="noborder"><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
    <td class="noborder"><%= link_to 'Destroy', invoice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Invoice', new_invoice_path %>
