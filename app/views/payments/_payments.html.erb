<% @payments.each do |payment| %>
  <tr>
    <td><%= link_to payment.invoice_header_id.to_s.rjust(6, '0'), payment.invoice_header %></td>
    <td><%= number_to_currency(payment.payment_amount) %></td>
    <td><%= payment.payment_date.strftime('%m/%d/%Y') %></td>
    <td><%= payment.payment_type %></td>
    <td><%= payment.payment_notes %></td>
    <td><%= link_to 'Edit', edit_invoice_payments_path(payment.invoice_header_id, payment.id) %></td>
    <td><%= link_to 'Destroy', destroy_invoice_payments_path(payment.invoice_header_id, payment.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
