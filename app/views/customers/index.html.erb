<h1>Customers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address 1</th>
    <th>Address 2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone number</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= link_to customer.name, customer_path(customer) %></td>
    <td><%= customer.address_1 %></td>
    <td><%= customer.address_2 %></td>
    <td><%= customer.city %></td>
    <td><%= customer.state %></td>
    <td><%= customer.zip %></td>
    <td><%= number_to_phone(customer.phone_number, :area_code => true) %></td>
    <td class="noborder"><%= link_to 'Invoices', customer_invoices_path(customer.id) %></td>
    <td class="noborder"><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td class="noborder"><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

