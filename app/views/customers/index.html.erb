<table>
  <thead>
	  <tr>
		<th>Name</th>
		<th>Address 1</th>
		<th>Address 2</th>
		<th>City</th>
		<th>State</th>
		<th>Zip</th>
		<th>Phone number</th>
	  </tr>
  </thead>
  <tbody>
<% @customers.each do |customer| %>
  <tr>
	<td class="colName"><%= link_to customer.name, customer_path(customer) %></td>
	<td class="colAdd1"><%= customer.address_1 %></td>
	<td class="colAdd2"><%= customer.address_2 %></td>
	<td class="colCity"><%= customer.city %></td>
	<td class="colState"><%= customer.state %></td>
	<td class="colZip"><%= customer.zip %></td>
	<td class="colPhone"><%= number_to_phone(customer.phone_number, :area_code => true) %></td>
	<td class="noborder"><%= link_to 'Invoices', customer_invoices_path(customer.id) %></td>
	<td class="noborder"><%= link_to 'Edit', edit_customer_path(customer) %></td>
	<td class="noborder"><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
  </tbody>
</table>
<br />

<%= link_to 'New Customer', new_customer_path %>
